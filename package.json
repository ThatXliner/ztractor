{
  "name": "ztractor",
  "version": "0.1.0",
  "description": "Use Zotero translators to extract metadata from websites",
  "author": "Bryan Hu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThatXliner/ztractor.git"
  },
  "bugs": {
    "url": "https://github.com/ThatXliner/ztractor/issues"
  },
  "homepage": "https://github.com/ThatXliner/ztractor#readme",
  "keywords": [
    "zotero",
    "metadata",
    "extraction",
    "web-scraping",
    "citations",
    "bibliography",
    "translator",
    "academic",
    "doi",
    "isbn"
  ],
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build/bundle-translators.ts && bun run build:node && bun run build:browser",
    "build:node": "bun build src/index.ts --outdir dist --target node --format esm",
    "build:browser": "bun build src/index.browser.ts --outdir dist --target browser --format esm --outfile browser.js",
    "test": "bun test",
    "prepare": "bun run build",
    "prepublishOnly": "bun test && bun run build"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "linkedom": "^0.18.5",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser.js",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/index.d.ts",
      "default": "./dist/browser.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
